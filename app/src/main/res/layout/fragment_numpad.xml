<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="7"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/numpad_DEL"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="4"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="5"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="6"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/numpad_CLR"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="3"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_weight="1"
        android:text="="
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"
        android:layout_rowSpan="2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="."
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="+/-"
        android:textSize="@dimen/numpad_key_fontsize"
        android:onClick="enterKey"/>
</GridLayout>
